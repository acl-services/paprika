{
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "version": {
      "message": "chore(Paprika): publish packages",
      "allowBranch": ["master", "pre-release-*", "release-*"]
    },
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md", "*.spec.js", "*.stories.js", "*.cypress.js"]
    }
  },
  "version": "independent"
}
